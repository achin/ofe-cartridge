#!/bin/bash -e

source $OPENSHIFT_CARTRIDGE_SDK_BASH

function start() {
    client_message "Adding OFE registration"
}

function stop() {
    client_message "Removing OFE registration"
}

function restart() {
    stop
    start
}

function status() {
    if [ -f "$OPENSHIFT_OFE_DIR/run/status" ]; then
        client_result "Running"
    fi
    client_result "Not running"
}

function noop () {
    return 0
}

case "$1" in
  start)       start ;;
  stop)        stop ;;
  restart)     restart ;;
  status)      status ;;
  reload)      noop ;;
  tidy)        noop ;;
  prebuild)    noop ;;
  build)       noop ;;
  deploy)      noop ;;
  post-deploy) noop ;;
  *)           exit 0
esac
